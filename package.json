{
  "name": "lonamic",
  "version": "0.1.0",
  "description": "Dynamic HRBACL",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "transpile": "node build/transpile.js",
    "clean": "rimraf lib dist es coverage",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -i src/core.js -o dist/lonamic.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -i src/core.js -o dist/lonamic.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "prepare": "npm run clean && npm run lint && npm test && npm run build",
    "cov": "nyc report --reporter=lcov",
    "lint": "eslint src && echo 'Lint complete.'",
    "test": "nyc tape src/index.test.js",
    "watch": "watch 'clear && npm run -s test && npm run lint' src",
    "verify": "npm run -s test && npm run -s lint",
    "precommit": "npm run verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmiPhil/lonamic.git"
  },
  "keywords": [
    "acl",
    "rbac",
    "hrbac",
    "hrbacl",
    "roles",
    "role"
  ],
  "author": "EmiPhil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EmiPhil/lonamic/issues"
  },
  "homepage": "https://github.com/EmiPhil/lonamic#readme",
  "devDependencies": {
    "babel-cli": "^6.3.15",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "gulp": "^3.9.1",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "tape": "^4.8.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
